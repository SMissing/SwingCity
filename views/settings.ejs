        // Logo upload handler
        async function handleLogoUpload(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            // Validate file size (5MB)
            if (file.size > 5 * 1024 * 1024) {
                showToast('File size must be less than 5MB', 'error');
                return;
            }
            
            const formData = new FormData();
            formData.append('logo', file);
            
            const progressDiv = document.getElementById('logoUploadProgress');
            const uploadWrapper = document.getElementById('logoUploadWrapper');
            
            progressDiv.style.display = 'flex';
            uploadWrapper.style.pointerEvents = 'none';
            uploadWrapper.style.opacity = '0.5';
            
            try {
                const response = await fetch('/api/settings/venue/logo', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Update preview
                    document.getElementById('logoPreview').src = data.logoPath;
                    document.getElementById('logoPreviewContainer').style.display = 'block';
                    uploadWrapper.style.display = 'none';
                    
                    // Update venue card icon
                    const venueIconImage = document.getElementById('venueIconImage');
                    const venueIconEmoji = document.getElementById('venueIconEmoji');
                    if (venueIconImage && venueIconEmoji) {
                        venueIconImage.src = data.logoPath;
                        venueIconImage.style.display = 'block';
                        venueIconEmoji.style.display = 'none';
                    }
                    
                    showToast('Logo uploaded successfully!', 'success');
                } else {
                    throw new Error(data.message || 'Failed to upload logo');
                }
            } catch (error) {
                console.error('Error uploading logo:', error);
                showToast(error.message || 'Failed to upload logo', 'error');
            } finally {
                progressDiv.style.display = 'none';
                uploadWrapper.style.pointerEvents = '';
                uploadWrapper.style.opacity = '1';
                event.target.value = ''; // Reset file input
            }
        }

