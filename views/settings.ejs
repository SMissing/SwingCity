        <!-- Future: Multi-Venue -->
        <section class="settings-section" style="opacity: 0.6;">
            <div class="section-header">
                <iconify-icon icon="ph:buildings-bold"></iconify-icon>
                <h2>Multi-Venue Management</h2>
                <span class="future-badge">
                    <iconify-icon icon="ph:clock-bold"></iconify-icon>
