    </div>

    <!-- Toast -->
    <div class="toast" id="toast">
        <iconify-icon icon="ph:check-circle-bold"></iconify-icon>
        <span id="toastMessage">Success!</span>
    </div>
    </div>

    <script src="/js/pin-lock.js"></script>
    <script>
        // Load settings on page load
        function setupCleanupButton() {
            const btn = document.getElementById('cleanupBtn');
            if (btn) {
                // Remove any existing listeners by cloning
                const newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);
                // Add event listener
                newBtn.addEventListener('click', cleanupZeroScores);
                console.log('Cleanup button event listener attached');
            } else {
                console.log('Cleanup button not found yet');
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            loadSettings();
            setupCleanupButton();
        });
        window.addEventListener('pinUnlocked', function() {
            loadSettings();
            setupCleanupButton();
        });
        
        // Also load if already authenticated
        if (sessionStorage.getItem('swingcity_authenticated') === 'true') {
            loadSettings();
            setupCleanupButton();
        }

        async function loadSettings() {
            try {
                const response = await fetch('/api/settings');
                const data = await response.json();
                
                if (data.venue) {
                    document.getElementById('venueName').value = data.venue.name || '';
                    document.getElementById('venueLocation').value = data.venue.location || '';
                    document.getElementById('venueNameDisplay').textContent = data.venue.name || 'Not Set';
                    document.getElementById('venueLocationDisplay').textContent = data.venue.location || 'Not Set';
                }
                
                if (data.email) {
                    document.getElementById('smtpHost').value = data.email.host || '';
                    document.getElementById('smtpPort').value = data.email.port || '465';
                    document.getElementById('smtpSecure').value = data.email.secure !== false ? 'true' : 'false';
                    document.getElementById('smtpUser').value = data.email.user || '';
                    document.getElementById('smtpFromName').value = data.email.fromName || '';
                    // Don't load password for security
                    
                    // Update badge
                    const badge = document.getElementById('emailBadge');
                    if (data.email.host && data.email.user) {
                        badge.textContent = 'Configured';
                        badge.className = 'badge configured';
                    }
                }
            } catch (error) {
                console.error('Error loading settings:', error);
            }
        }

        async function saveVenueInfo() {
            const btn = event.target.closest('button');
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<div class="spinner"></div> Saving...';
            btn.disabled = true;

            try {
                const response = await fetch('/api/settings/venue', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        name: document.getElementById('venueName').value,
                        location: document.getElementById('venueLocation').value
                    })
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById('venueNameDisplay').textContent = document.getElementById('venueName').value || 'Not Set';
                    document.getElementById('venueLocationDisplay').textContent = document.getElementById('venueLocation').value || 'Not Set';
                    showToast('Venue info saved!', 'success');
                } else {
                    throw new Error(data.message || 'Failed to save');
                }
            } catch (error) {
                showToast(error.message || 'Failed to save venue info', 'error');
            } finally {
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }

        async function saveEmailSettings() {
            const btn = event.target.closest('button');
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<div class="spinner"></div> Saving...';
            btn.disabled = true;

            try {
                const password = document.getElementById('smtpPass').value;
                const settings = {
                    host: document.getElementById('smtpHost').value,
                    port: parseInt(document.getElementById('smtpPort').value) || 465,
                    secure: document.getElementById('smtpSecure').value === 'true',
                    user: document.getElementById('smtpUser').value,
                    fromName: document.getElementById('smtpFromName').value
                };
                
                // Only include password if it was entered
                if (password && password.length > 0) {
                    settings.pass = password;
                }

                const response = await fetch('/api/settings/email', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(settings)
                });

                const data = await response.json();

                if (data.success) {
                    const badge = document.getElementById('emailBadge');
                    badge.textContent = 'Configured';
                    badge.className = 'badge configured';
                    document.getElementById('smtpPass').value = ''; // Clear password field
                    showToast('Email settings saved!', 'success');
                } else {
                    throw new Error(data.message || 'Failed to save');
                }
            } catch (error) {
                showToast(error.message || 'Failed to save email settings', 'error');
            } finally {
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }

        async function testEmail() {
            const btn = event.target.closest('button');
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<div class="spinner"></div> Sending...';
            btn.disabled = true;

            try {
                const testTo = document.getElementById('smtpUser').value;
                
                if (!testTo) {
                    throw new Error('Please enter an email address first');
                }

                const response = await fetch('/api/settings/email/test', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ to: testTo })
                });

                const data = await response.json();

                if (data.success) {
                    showToast(`Test email sent to ${testTo}!`, 'success');
                } else {
                    throw new Error(data.message || 'Failed to send test email');
                }
            } catch (error) {
                showToast(error.message || 'Failed to send test email', 'error');
            } finally {
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }

        async function cleanupZeroScores() {
            console.log('cleanupZeroScores called');
            const btn = document.getElementById('cleanupBtn');
            
            if (!btn) {
                console.error('Cleanup button not found!');
                showToast('Error: Button not found', 'error');
                return;
            }
            
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<div class="spinner"></div> Cleaning up...';
            btn.disabled = true;

            // Confirm before deleting
            const confirmed = confirm('Are you sure you want to remove all high score entries with a total score of 0?\n\nThis action cannot be undone.');
            
            if (!confirmed) {
                btn.innerHTML = originalContent;
                btn.disabled = false;
                return;
            }

            try {
                console.log('Sending DELETE request to /api/highscores/cleanup-zeros');
                const response = await fetch('/api/highscores/cleanup-zeros', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                console.log('Response status:', response.status);
                
                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({ message: 'Unknown error' }));
                    throw new Error(errorData.message || `HTTP ${response.status}: ${response.statusText}`);
                }

                const data = await response.json();
                console.log('Response data:', data);

                if (data.success) {
                    showToast(`Successfully removed ${data.removed || 0} zero-score entries!`, 'success');
                } else {
                    throw new Error(data.message || 'Failed to clean up high scores');
                }
            } catch (error) {
                console.error('Error in cleanupZeroScores:', error);
                showToast(error.message || 'Failed to clean up high scores', 'error');
            } finally {
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const icon = toast.querySelector('iconify-icon');
            const text = document.getElementById('toastMessage');

            toast.className = 'toast ' + type;
            icon.setAttribute('icon', type === 'success' ? 'ph:check-circle-bold' : 'ph:x-circle-bold');
            text.textContent = message;

            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }
    </script>
