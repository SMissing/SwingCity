            <div class="section-actions">
                <button class="btn btn-secondary" onclick="testEmail()">
                    <iconify-icon icon="ph:paper-plane-tilt-bold"></iconify-icon>
                    Send Test Email
                </button>
                <button class="btn btn-primary" onclick="saveEmailSettings()">
                    <iconify-icon icon="ph:floppy-disk-bold"></iconify-icon>
                    Save Email Settings
