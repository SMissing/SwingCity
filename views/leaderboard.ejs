    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --bg-dark: #06080d;
            --bg-card: #0d1117;
            --bg-card-alt: #161b22;
            --accent-green: #00ff88;
            --accent-cyan: #00d4ff;
            --accent-purple: #a855f7;
            --accent-pink: #ec4899;
            --accent-gold: #fbbf24;
            --accent-orange: #f97316;
            --text-primary: #ffffff;
            --text-secondary: #8b949e;
            --border-subtle: rgba(255, 255, 255, 0.06);
            --glow-green: rgba(0, 255, 136, 0.4);
            --glow-gold: rgba(251, 191, 36, 0.4);
        }

        html, body {
            overflow: hidden !important;
            height: 100vh !important;
            max-height: 100vh !important;
            font-family: 'Space Grotesk', system-ui, sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
        }

        /* Stunning animated gradient background */
        .bg-gradient {
            position: fixed;
            inset: 0;
            background: 
                radial-gradient(ellipse 80% 50% at 50% -20%, rgba(0, 255, 136, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse 60% 40% at 90% 80%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
                radial-gradient(ellipse 50% 30% at 10% 90%, rgba(0, 212, 255, 0.08) 0%, transparent 50%),
                linear-gradient(180deg, var(--bg-dark) 0%, #0a0f18 50%, var(--bg-dark) 100%);
            pointer-events: none;
            z-index: 0;
        }

        /* Subtle grid pattern overlay */
        .bg-grid {
            position: fixed;
            inset: 0;
            background-image: 
                linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
            background-size: 60px 60px;
            pointer-events: none;
            z-index: 1;
            opacity: 0.5;
        }

        .leaderboard-container {
            position: relative;
            z-index: 2;
            height: 100vh;
            max-height: 100vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        /* Header */
        .leaderboard-header {
            text-align: center;
            padding: 2rem 2rem 1rem;
            flex-shrink: 0;
        }

        .leaderboard-logo {
            height: 120px;
            width: auto;
            filter: drop-shadow(0 0 40px rgba(0, 255, 136, 0.3));
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .leaderboard-logo:hover {
            transform: scale(1.02);
        }

        /* State Management */
        .leaderboard-state {
            flex: 1;
            overflow: hidden;
            display: none;
            align-items: center;
            justify-content: center;
            padding: 0 2rem 2rem;
        }

        .leaderboard-state.active {
            display: flex;
        }

        /* Loading State */
        .loading-container {
            text-align: center;
        }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 3px solid var(--border-subtle);
            border-top-color: var(--accent-green);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1.5rem;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .loading-text {
            font-size: 1.5rem;
            color: var(--text-secondary);
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }

        /* No Teams State */
        .no-teams-container {
            text-align: center;
        }

        .no-teams-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            opacity: 0.3;
        }

        .no-teams-title {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            color: var(--text-primary);
        }

        .no-teams-subtitle {
            font-size: 1.25rem;
            color: var(--text-secondary);
        }

        /* Team Display */
        .team-display {
            width: 100%;
            max-width: 1600px;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .team-display.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Scorecard Table */
        .scorecard-wrapper {
            background: var(--bg-card);
            border-radius: 24px;
            border: 1px solid var(--border-subtle);
            overflow: hidden;
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.05);
        }

        .scorecard-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 1.1rem;
        }

        .scorecard-table {
            table-layout: fixed;
        }

        .scorecard-table thead th {
            padding: 0.9rem 0.25rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.02em;
            font-size: 0.7rem;
            border-bottom: 2px solid var(--border-subtle);
            background: var(--bg-card-alt);
            color: var(--text-secondary);
            vertical-align: bottom;
        }

        .scorecard-table .player-name-header {
            text-align: left;
            padding-left: 1.25rem;
            width: 160px;
            min-width: 160px;
            color: var(--text-primary);
            font-size: 0.85rem;
            vertical-align: bottom;
            background: var(--bg-card-alt);
        }

        .scorecard-table .hole-header {
            text-align: center;
            font-size: 0.75rem;
            padding: 0.75rem 0.2rem;
            vertical-align: bottom;
            line-height: 1.2;
            font-weight: 600;
        }

        .scorecard-table .hole-header span {
            display: block;
            word-wrap: break-word;
            hyphens: auto;
            -webkit-hyphens: auto;
            -ms-hyphens: auto;
        }

        /* Alternating hole header colors - Pink, Blue, Yellow */
        .scorecard-table .hole-header:nth-child(3n+2) { 
            background: rgba(236, 72, 153, 0.2);
            color: #f9a8d4;
        }
        .scorecard-table .hole-header:nth-child(3n+3) { 
            background: rgba(0, 212, 255, 0.2);
            color: #67e8f9;
        }
        .scorecard-table .hole-header:nth-child(3n+4) { 
            background: rgba(251, 191, 36, 0.2);
            color: #fcd34d;
        }

        .scorecard-table .total-header {
            text-align: center;
            width: 100px;
            min-width: 100px;
            background: rgba(0, 255, 136, 0.15);
            color: var(--accent-green);
            font-size: 0.85rem;
            vertical-align: bottom;
        }

        .scorecard-table tbody tr {
            border-bottom: 1px solid var(--border-subtle);
            transition: all 0.3s ease;
        }

        .scorecard-table tbody tr:last-child {
            border-bottom: none;
        }

        /* Winner row - first place styling */
        .scorecard-table tbody tr.winner-row {
            background: linear-gradient(90deg, rgba(251, 191, 36, 0.15) 0%, rgba(251, 191, 36, 0.05) 50%, transparent 100%);
            border-left: 4px solid var(--accent-gold);
        }

        .scorecard-table tbody tr.winner-row .player-name-cell {
            color: var(--accent-gold);
        }

        .scorecard-table tbody tr.winner-row .player-name-cell::before {
            content: 'ðŸ‘‘ ';
        }

        /* Second place */
        .scorecard-table tbody tr.second-row {
            background: rgba(255, 255, 255, 0.03);
        }

        /* Third place */
        .scorecard-table tbody tr.third-row {
            background: rgba(255, 255, 255, 0.015);
        }

        .scorecard-table .player-name-cell {
            padding: 1.1rem 1.5rem;
            font-weight: 600;
            font-size: 1.3rem;
            color: var(--text-primary);
            text-align: left;
            background: transparent;
        }

        .scorecard-table .score-cell {
            padding: 1.1rem 0.5rem;
            text-align: center;
            font-weight: 500;
            font-size: 1.15rem;
            font-variant-numeric: tabular-nums;
            color: var(--text-primary);
        }

        .scorecard-table .total-cell {
            padding: 1.1rem;
            text-align: center;
            font-weight: 700;
            font-size: 1.5rem;
            font-variant-numeric: tabular-nums;
            background: rgba(0, 255, 136, 0.06);
        }

        /* Score Colors */
        .positive-score { color: var(--accent-green); }
        .negative-score { color: #f87171; }
        .zero-score { color: var(--text-secondary); }
        .no-score { color: rgba(255, 255, 255, 0.15); }

        /* Best/Worst score highlights - text only */
        .best-score {
            color: var(--accent-green) !important;
            font-weight: 700;
        }

        .worst-score {
            color: #f87171 !important;
            font-weight: 700;
        }

        /* High Scores Display - Two Column Top 20 */
        .highscore-display {
            width: 100%;
            max-width: 1200px;
            height: 100%;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .highscore-display.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Page-wide Decorative Background Elements */
        .page-decorations {
            position: fixed;
            inset: 0;
            pointer-events: none;
            overflow: hidden;
            z-index: 1;
        }

        .deco {
            position: absolute;
            opacity: 0.12;
            font-size: 2rem;
            color: var(--accent-green);
            animation: float 10s ease-in-out infinite;
        }

        .deco.gold { color: var(--accent-gold); }
        .deco.cyan { color: var(--accent-cyan); }
        .deco.pink { color: var(--accent-pink); }
        .deco.purple { color: var(--accent-purple); }
        .deco.green { color: var(--accent-green); }

        /* Left side decorations */
        .deco:nth-child(1) { top: 8%; left: 2%; font-size: 2.5rem; animation-delay: 0s; }
        .deco:nth-child(2) { top: 18%; left: 5%; font-size: 1.8rem; animation-delay: 1.2s; }
        .deco:nth-child(3) { top: 28%; left: 3%; font-size: 2.2rem; animation-delay: 0.5s; }
        .deco:nth-child(4) { top: 38%; left: 6%; font-size: 1.5rem; animation-delay: 2.1s; }
        .deco:nth-child(5) { top: 48%; left: 2%; font-size: 2.8rem; animation-delay: 0.8s; }
        .deco:nth-child(6) { top: 58%; left: 4%; font-size: 2rem; animation-delay: 1.5s; }
        .deco:nth-child(7) { top: 68%; left: 7%; font-size: 1.6rem; animation-delay: 2.5s; }
        .deco:nth-child(8) { top: 78%; left: 3%; font-size: 2.3rem; animation-delay: 0.3s; }
        .deco:nth-child(9) { top: 88%; left: 5%; font-size: 1.9rem; animation-delay: 1.8s; }
        
        /* Right side decorations */
        .deco:nth-child(10) { top: 5%; right: 3%; font-size: 2.2rem; animation-delay: 0.6s; }
        .deco:nth-child(11) { top: 15%; right: 6%; font-size: 1.7rem; animation-delay: 1.9s; }
        .deco:nth-child(12) { top: 25%; right: 2%; font-size: 2.5rem; animation-delay: 0.2s; }
        .deco:nth-child(13) { top: 35%; right: 5%; font-size: 1.4rem; animation-delay: 2.3s; }
        .deco:nth-child(14) { top: 45%; right: 3%; font-size: 2.1rem; animation-delay: 1.1s; }
        .deco:nth-child(15) { top: 55%; right: 7%; font-size: 1.8rem; animation-delay: 0.9s; }
        .deco:nth-child(16) { top: 65%; right: 2%; font-size: 2.6rem; animation-delay: 2.7s; }
        .deco:nth-child(17) { top: 75%; right: 4%; font-size: 1.5rem; animation-delay: 0.4s; }
        .deco:nth-child(18) { top: 85%; right: 6%; font-size: 2rem; animation-delay: 1.6s; }
        
        /* Scattered center-ish decorations */
        .deco:nth-child(19) { top: 12%; left: 12%; font-size: 1.3rem; animation-delay: 2.9s; }
        .deco:nth-child(20) { top: 22%; right: 12%; font-size: 1.6rem; animation-delay: 0.7s; }
        .deco:nth-child(21) { top: 82%; left: 10%; font-size: 1.4rem; animation-delay: 1.3s; }
        .deco:nth-child(22) { top: 92%; right: 10%; font-size: 1.7rem; animation-delay: 2.0s; }
        .deco:nth-child(23) { top: 3%; left: 8%; font-size: 1.9rem; animation-delay: 0.1s; }
        .deco:nth-child(24) { top: 95%; left: 15%; font-size: 1.5rem; animation-delay: 1.4s; }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            25% { transform: translateY(-10px) rotate(8deg); }
            50% { transform: translateY(0) rotate(0deg); }
            75% { transform: translateY(10px) rotate(-8deg); }
        }

        .highscore-header {
            text-align: center;
            padding-top: 1rem;
            flex-shrink: 0;
            position: relative;
            z-index: 1;
        }

        .highscore-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 3.5rem;
            letter-spacing: 0.15em;
            background: linear-gradient(135deg, var(--accent-gold) 0%, #fff9c4 30%, var(--accent-gold) 60%, #fde68a 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
        }

        .highscore-subtitle {
            font-size: 0.9rem;
            color: var(--text-secondary);
            letter-spacing: 0.2em;
            text-transform: uppercase;
        }

        .highscore-columns-wrapper {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
        }

        .highscore-columns {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
            width: 100%;
        }

        .highscore-column {
            background: rgba(13, 17, 23, 0.85);
            border-radius: 16px;
            border: 1px solid rgba(251, 191, 36, 0.15);
            overflow: hidden;
            backdrop-filter: blur(10px);
            box-shadow: 
                0 20px 40px -12px rgba(0, 0, 0, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
        }

        .hof-entry {
            display: flex;
            align-items: center;
            padding: 0.7rem 1.25rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.2s ease;
        }

        .hof-entry:last-child {
            border-bottom: none;
        }

        .hof-rank {
            width: 50px;
            font-weight: 800;
            font-size: 1.3rem;
            color: var(--accent-gold);
            text-align: center;
            flex-shrink: 0;
        }

        .hof-rank.rank-1 { color: #ffd700; text-shadow: 0 0 15px rgba(255, 215, 0, 0.5); }
        .hof-rank.rank-2 { color: #e8e8e8; text-shadow: 0 0 10px rgba(232, 232, 232, 0.3); }
        .hof-rank.rank-3 { color: #cd7f32; text-shadow: 0 0 10px rgba(205, 127, 50, 0.3); }

        .hof-name {
            flex: 1;
            font-weight: 600;
            font-size: 1.15rem;
            color: var(--text-primary);
            padding: 0 1rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .hof-score {
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--accent-green);
            font-variant-numeric: tabular-nums;
            text-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
        }

        /* Top 3 special rows */
        .hof-entry.rank-1-row {
            background: linear-gradient(90deg, rgba(255, 215, 0, 0.15) 0%, rgba(255, 215, 0, 0.05) 50%, transparent 100%);
            border-left: 3px solid #ffd700;
        }

        .hof-entry.rank-2-row {
            background: linear-gradient(90deg, rgba(232, 232, 232, 0.1) 0%, transparent 100%);
            border-left: 3px solid #c0c0c0;
        }

        .hof-entry.rank-3-row {
            background: linear-gradient(90deg, rgba(205, 127, 50, 0.1) 0%, transparent 100%);
            border-left: 3px solid #cd7f32;
        }

        .highscore-empty {
            text-align: center;
            padding: 3rem;
            color: var(--text-secondary);
            grid-column: span 2;
        }

        /* Cycle Indicator */
        .cycle-indicator {
            position: fixed;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            z-index: 100;
        }

        .cycle-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            transition: all 0.3s ease;
        }

        .cycle-dot.active {
            background: var(--accent-green);
            box-shadow: 0 0 15px var(--glow-green);
            transform: scale(1.2);
        }

        .cycle-dot.highscore-dot {
            background: rgba(251, 191, 36, 0.2);
        }

        .cycle-dot.highscore-dot.active {
            background: var(--accent-gold);
            box-shadow: 0 0 15px var(--glow-gold);
        }

        /* Countdown Bar */
        .countdown-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-green), var(--accent-cyan));
            transition: width 1s linear;
            z-index: 101;
            box-shadow: 0 0 20px var(--glow-green);
        }

        /* Fullscreen mode */
        .fullscreen-active {
            overflow: hidden !important;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .scorecard-table {
                font-size: 0.95rem;
            }
            .scorecard-table .player-name-cell {
                font-size: 1.1rem;
            }
            .scorecard-table .hole-header {
                font-size: 0.65rem;
                padding: 0.75rem 0.25rem;
            }
        }

        @media (max-height: 800px) {
            .leaderboard-header {
                padding: 1rem 2rem 0.5rem;
            }
            .leaderboard-logo {
                height: 80px;
            }
            .scorecard-table thead th {
                padding: 0.75rem 0.5rem;
            }
            .scorecard-table .player-name-cell,
            .scorecard-table .score-cell {
                padding: 0.75rem 0.5rem;
            }
        }

        /* Hidden elements */
        .visually-hidden {
            position: absolute !important;
            width: 1px !important;
            height: 1px !important;
            padding: 0 !important;
            margin: -1px !important;
            overflow: hidden !important;
            clip: rect(0 0 0 0) !important;
            white-space: nowrap !important;
            border: 0 !important;
        }
    </style>
</head>
