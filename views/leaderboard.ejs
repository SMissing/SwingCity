</div>

<!-- Hidden RFID input to capture keyboard scanner input -->
<input type="text" id="hiddenRfidInput" style="position: absolute; left: -9999px; opacity: 0;" tabindex="-1">

<script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
<script src="/js/pin-lock.js"></script>
<script>
// Global variables
let allTeams = [];
let teamScores = [];
let highScores = [];
let currentTeamIndex = 0;
let currentDisplayMode = 'team';
let cycleInterval = null;
let socket = null;
let scanTimeout = null;
let scannedTeamData = null;
let scannedTeamTimeout = null;
let countdownInterval = null;
let countdownRemaining = 0;
let highScoreTimeout = null;

// Configuration
const CYCLE_DURATION = 10000; // 10 seconds per team
const HIGHSCORE_DISPLAY_DURATION = 10000; // 10 seconds for hall of fame
const SCANNED_DISPLAY_DURATION = 60000;
const REFRESH_INTERVAL = 60000;

// Hole names mapping
const HOLE_NAMES = {
    'Plinko': 'Plinko',
    'SpinningTop': 'Spinning Top', 
    'Haphazard': 'Haphazard',
    'Roundhouse': 'Roundhouse',
    'HillHop': 'Hill Hop',
    'SkiJump': 'Ski Jump',
    'Mastermind': 'Mastermind',
    'Igloo': 'Igloo',
    'Octagon': 'Octagon',
    'LoopDeLoop': 'Loop De Loop',
    'UpAndOver': 'Up And Over',
    'Lopsided': 'Lopsided',
    'Lopside': 'Lopside'
};

// Shorter display names for table headers
const HOLE_DISPLAY_NAMES = {
    'Plinko': 'Plinko',
    'SpinningTop': 'Spinning Top', 
    'Haphazard': 'Hap-hazard',
    'Roundhouse': 'Round-house',
    'HillHop': 'Hill Hop',
    'SkiJump': 'Ski Jump',
    'Mastermind': 'Master-mind',
    'Igloo': 'Igloo',
    'Octagon': 'Octagon',
    'LoopDeLoop': 'Loop-De-Loop',
    'UpAndOver': 'Up & Over',
    'Lopsided': 'Lop-sided',
    'Lopside': 'Lop-side'
};

const HOLE_ORDER = ['Plinko', 'SpinningTop', 'Haphazard', 'Roundhouse', 'HillHop', 'SkiJump', 'Mastermind', 'Igloo', 'Octagon', 'LoopDeLoop', 'UpAndOver', 'Lopside'];

// Initialize
document.addEventListener('DOMContentLoaded', function() {
    initializeSocket();
    setupRFIDCapture();
    setupFullscreenToggle();
    loadAllData();
    setInterval(loadAllData, REFRESH_INTERVAL);
});

function initializeSocket() {
    socket = io();
    socket.on('connect', () => console.log('Leaderboard connected'));
    socket.on('disconnect', () => console.log('Leaderboard disconnected'));
    socket.on('scoreUpdate', () => loadAllTeams());
    socket.on('highScoreUpdated', () => loadHighScores());
}

function setupFullscreenToggle() {
    let clickCount = 0;
    let clickTimer = null;
    let singleClickTimer = null;
    const logo = document.getElementById('logoElement');
    
    logo.addEventListener('click', () => {
        clickCount++;
        if (clickTimer) clearTimeout(clickTimer);
        if (singleClickTimer) clearTimeout(singleClickTimer);
        
        clickTimer = setTimeout(() => { clickCount = 0; }, 2000);
        
        if (clickCount === 4) {
            // 4x click = fullscreen toggle
            const isFs = document.fullscreenElement || document.webkitFullscreenElement;
            if (!isFs) {
                const el = document.documentElement;
                if (el.requestFullscreen) el.requestFullscreen();
                else if (el.webkitRequestFullscreen) el.webkitRequestFullscreen();
                document.body.classList.add('fullscreen-active');
            } else {
                if (document.exitFullscreen) document.exitFullscreen();
                else if (document.webkitExitFullscreen) document.webkitExitFullscreen();
                document.body.classList.remove('fullscreen-active');
            }
            clickCount = 0;
        } else if (clickCount === 1) {
            // Single click = go home (with delay to check for multi-click)
            singleClickTimer = setTimeout(() => {
                if (clickCount === 1) {
                    window.location.href = '/';
                }
            }, 300);
        }
    });
    
    document.addEventListener('fullscreenchange', () => {
        if (!document.fullscreenElement) document.body.classList.remove('fullscreen-active');
    });
}

function setupRFIDCapture() {
    const hiddenInput = document.getElementById('hiddenRfidInput');
    ensureRFIDFocus();
    document.addEventListener('click', ensureRFIDFocus);
    document.addEventListener('touchend', ensureRFIDFocus);

    hiddenInput.addEventListener('input', (e) => {
        const value = e.target.value.trim();
        if (scanTimeout) clearTimeout(scanTimeout);
        scanTimeout = setTimeout(() => {
            if (value.length >= 8) {
                processRFIDScan(value);
                hiddenInput.value = '';
            }
        }, 100);
    });

    hiddenInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            const value = e.target.value.trim();
            if (value.length >= 8) {
                processRFIDScan(value);
                hiddenInput.value = '';
            }
        }
    });
}

function ensureRFIDFocus() {
    const hiddenInput = document.getElementById('hiddenRfidInput');
    if (hiddenInput && document.activeElement !== hiddenInput) {
        hiddenInput.focus();
    }
}
setInterval(ensureRFIDFocus, 500);

async function processRFIDScan(rfid) {
    console.log('RFID Scanned:', rfid);
    try {
        const response = await fetch(`/api/team/${rfid}`);
        if (!response.ok) throw new Error('Team not found');
        const teamData = await response.json();
        displayScannedTeam(teamData);
    } catch (error) {
        console.error('Error fetching team:', error);
    }
}

function displayScannedTeam(teamData) {
    stopCycling();
    if (scannedTeamTimeout) clearTimeout(scannedTeamTimeout);
    if (countdownInterval) clearInterval(countdownInterval);
    
    scannedTeamData = teamData;
    document.getElementById('cycleIndicator').style.display = 'none';
    
    const highScoreDisplay = document.getElementById('highScoreDisplay');
    if (highScoreDisplay) highScoreDisplay.classList.remove('visible');
    
    displayTeam(teamData);
    showState('scores');
    
    countdownRemaining = SCANNED_DISPLAY_DURATION;
    updateCountdownBar();
    countdownInterval = setInterval(() => {
        countdownRemaining -= 1000;
        updateCountdownBar();
        if (countdownRemaining <= 0) clearInterval(countdownInterval);
    }, 1000);
    
    scannedTeamTimeout = setTimeout(resumeCycling, SCANNED_DISPLAY_DURATION);
}

function updateCountdownBar() {
    const percentage = (countdownRemaining / SCANNED_DISPLAY_DURATION) * 100;
    document.getElementById('countdownBar').style.width = percentage + '%';
}

async function loadAllData() {
    await Promise.all([loadAllTeams(), loadHighScores()]);
}

async function loadAllTeams() {
    try {
        if (!scannedTeamData) showState('loading');
        
        const teamsResponse = await fetch('/api/teams');
        if (!teamsResponse.ok) throw new Error('Failed to fetch teams');
        const teamsData = await teamsResponse.json();
        allTeams = teamsData.teams || [];
        
        if (allTeams.length === 0) {
            if (!scannedTeamData) {
                showState('noTeams');
                stopCycling();
            }
            return;
        }
        
        teamScores = [];
        for (const team of allTeams) {
            try {
                const scoreResponse = await fetch(`/api/team/${team.rfid}`);
                if (scoreResponse.ok) {
                    const scoreData = await scoreResponse.json();
                    teamScores.push(scoreData);
                }
            } catch (err) {
                console.warn(`Failed to fetch scores for team ${team.rfid}:`, err);
            }
        }
        
        teamScores = teamScores.filter(t => t && t.players && t.players.length > 0);
        
        if (teamScores.length === 0) {
            if (!scannedTeamData) {
                showState('noTeams');
                stopCycling();
            }
            return;
        }
        
        teamScores.sort((a, b) => (b.totalScore || 0) - (a.totalScore || 0));
        updateCycleIndicator();
        
        if (!scannedTeamData && !cycleInterval) {
            currentTeamIndex = 0;
            currentDisplayMode = 'team';
            displayCurrentTeam();
            startCycling();
        }
        
    } catch (error) {
        console.error('Error loading teams:', error);
        if (!scannedTeamData) showState('noTeams');
    }
}

async function loadHighScores() {
    try {
        const response = await fetch('/api/highscores?limit=25');
        if (!response.ok) throw new Error('Failed to fetch high scores');
        const data = await response.json();
        highScores = data.highScores || [];
    } catch (error) {
        console.error('Error loading high scores:', error);
        highScores = [];
    }
}

function updateCycleIndicator() {
    const indicator = document.getElementById('cycleIndicator');
    indicator.innerHTML = '';
    if (scannedTeamData) return;
    
    const totalItems = teamScores.length * 2;
    if (totalItems <= 2) return;
    
    for (let i = 0; i < totalItems; i++) {
        const dot = document.createElement('div');
        const isHighScoreDot = i % 2 === 1;
        const isActive = (i === currentTeamIndex * 2 && currentDisplayMode === 'team') ||
                        (i === currentTeamIndex * 2 + 1 && currentDisplayMode === 'highscore');
        
        dot.className = 'cycle-dot' + (isHighScoreDot ? ' highscore-dot' : '') + (isActive ? ' active' : '');
        indicator.appendChild(dot);
    }
}

function displayCurrentTeam() {
    if (teamScores.length === 0) return;
    const teamData = teamScores[currentTeamIndex];
    displayTeam(teamData);
    showState('scores');
    currentDisplayMode = 'team';
    updateCycleIndicator();
}

function displayTeam(teamData) {
    const teamDisplay = document.getElementById('teamDisplay');
    teamDisplay.classList.remove('visible');
    
    setTimeout(() => {
        buildScorecardTable(teamData.players);
        teamDisplay.classList.add('visible');
    }, 300);
}

function buildScorecardTable(players) {
    const thead = document.getElementById('scorecardHead');
    const tbody = document.getElementById('scorecardBody');
    
    // Build header
    thead.innerHTML = '';
    const headerRow = document.createElement('tr');
    
    const playerHeader = document.createElement('th');
    playerHeader.className = 'player-name-header';
    playerHeader.textContent = 'Player';
    headerRow.appendChild(playerHeader);
    
    HOLE_ORDER.forEach(holeId => {
        const th = document.createElement('th');
        th.className = 'hole-header';
        const span = document.createElement('span');
        // Use shorter/hyphenated names for long holes
        span.textContent = HOLE_DISPLAY_NAMES[holeId] || HOLE_NAMES[holeId] || holeId;
        th.appendChild(span);
        headerRow.appendChild(th);
    });
    
    const totalHeader = document.createElement('th');
    totalHeader.className = 'total-header';
    totalHeader.textContent = 'Total';
    headerRow.appendChild(totalHeader);
    thead.appendChild(headerRow);
    
    // Calculate totals and sort players by score (highest first = winner at top)
    const playersWithTotals = players.map(player => {
        const total = Object.values(player.scores || {}).reduce((sum, holeScore) => {
            return sum + (holeScore.total || 0);
        }, 0);
        return { ...player, calculatedTotal: total };
    }).sort((a, b) => b.calculatedTotal - a.calculatedTotal);
    
    // Build body - sorted by score
    tbody.innerHTML = '';
    playersWithTotals.forEach((player, index) => {
        const playerTotal = player.calculatedTotal;
        
        const row = document.createElement('tr');
        
        // Add placement classes
        if (index === 0) row.classList.add('winner-row');
        else if (index === 1) row.classList.add('second-row');
        else if (index === 2) row.classList.add('third-row');
        
        const nameCell = document.createElement('td');
        nameCell.className = 'player-name-cell';
        nameCell.textContent = player.name;
        row.appendChild(nameCell);
        
        HOLE_ORDER.forEach(holeId => {
            const score = player.scores ? player.scores[holeId] : null;
            const scoreValue = score ? score.total : '-';
            const scoreClass = score ? (score.total > 0 ? 'positive-score' : score.total < 0 ? 'negative-score' : 'zero-score') : 'no-score';
            
            const scoreCell = document.createElement('td');
            scoreCell.className = `score-cell ${scoreClass}`;
            scoreCell.textContent = scoreValue;
            row.appendChild(scoreCell);
        });
        
        const totalClass = playerTotal > 0 ? 'positive-score' : playerTotal < 0 ? 'negative-score' : 'zero-score';
        const totalCell = document.createElement('td');
        totalCell.className = `total-cell ${totalClass}`;
        totalCell.textContent = playerTotal;
        row.appendChild(totalCell);
        
        tbody.appendChild(row);
    });
    
    // Highlight best/worst scores per column
    highlightBestWorstScores(tbody);
}

function highlightBestWorstScores(tbody) {
    const rows = Array.from(tbody.querySelectorAll('tr'));
    const numHoles = HOLE_ORDER.length;
    
    // For each hole column (skip player name at index 0, and total at the end)
    for (let colIndex = 1; colIndex <= numHoles; colIndex++) {
        let values = [];
        
        rows.forEach(row => {
            const cell = row.children[colIndex];
            if (!cell || cell.classList.contains('total-cell')) return;
            
            const text = cell.textContent.trim();
            const num = parseInt(text, 10);
            
            if (!isNaN(num) && text !== '-') {
                values.push({ num, cell });
            }
        });
        
        // Need at least 2 players to compare
        if (values.length >= 2) {
            const max = Math.max(...values.map(v => v.num));
            const min = Math.min(...values.map(v => v.num));
            
            values.forEach(v => {
                // Highlight best score (highest positive)
                if (v.num === max && max > 0) {
                    v.cell.classList.add('best-score');
                }
                // Highlight worst score (lowest negative)
                if (v.num === min && min < 0) {
                    v.cell.classList.add('worst-score');
                }
            });
        }
    }
}

function displayHighScores() {
    showState('highScores');
    currentDisplayMode = 'highscore';
    
    const highScoreDisplay = document.getElementById('highScoreDisplay');
    const leftColumn = document.getElementById('hofColumnLeft');
    const rightColumn = document.getElementById('hofColumnRight');
    
    highScoreDisplay.classList.remove('visible');
    
    setTimeout(() => {
        leftColumn.innerHTML = '';
        rightColumn.innerHTML = '';
        
        if (highScores.length === 0) {
            leftColumn.innerHTML = '<div class="highscore-empty">No scores yet</div>';
        } else {
            // Show top 20 in two columns (1-10 left, 11-20 right)
            const top20 = highScores.slice(0, 20);
            
            top20.forEach((score, index) => {
                const rank = index + 1;
                const entry = document.createElement('div');
                entry.className = 'hof-entry';
                
                if (rank === 1) entry.classList.add('rank-1-row');
                else if (rank === 2) entry.classList.add('rank-2-row');
                else if (rank === 3) entry.classList.add('rank-3-row');
                
                let rankDisplay = rank;
                let rankClass = '';
                if (rank === 1) { rankClass = 'rank-1'; }
                else if (rank === 2) { rankClass = 'rank-2'; }
                else if (rank === 3) { rankClass = 'rank-3'; }
                
                entry.innerHTML = `
                    <div class="hof-rank ${rankClass}">${rankDisplay}</div>
                    <div class="hof-name">${escapeHtml(score.playerName)}</div>
                    <div class="hof-score">${score.totalScore.toLocaleString()} PTS</div>
                `;
                
                // Add to left column (1-10) or right column (11-20)
                if (rank <= 10) {
                    leftColumn.appendChild(entry);
                } else {
                    rightColumn.appendChild(entry);
                }
            });
            
            // If we have less than 10 entries in right column, fill with empty space
            if (top20.length <= 10) {
                rightColumn.innerHTML = '<div class="highscore-empty" style="opacity: 0.3;">More players coming soon...</div>';
            }
        }
        
        highScoreDisplay.classList.add('visible');
        
        // After display duration, move to next team
        setTimeout(() => {
            if (!scannedTeamData) {
                onHighScoreDisplayComplete();
            }
        }, HIGHSCORE_DISPLAY_DURATION);
    }, 300);
    
    updateCycleIndicator();
}

function onHighScoreDisplayComplete() {
    if (scannedTeamData) return;
    
    const highScoreDisplay = document.getElementById('highScoreDisplay');
    highScoreDisplay.classList.remove('visible');
    
    setTimeout(() => {
        currentTeamIndex = (currentTeamIndex + 1) % teamScores.length;
        displayCurrentTeam();
        scheduleNextCycle();
    }, 500);
}

function startCycling() {
    if (cycleInterval) clearTimeout(cycleInterval);
    currentDisplayMode = 'team';
    scheduleNextCycle();
}

function scheduleNextCycle() {
    if (scannedTeamData) return;
    
    if (currentDisplayMode === 'team') {
        cycleInterval = setTimeout(() => {
            if (scannedTeamData) return;
            displayHighScores();
        }, CYCLE_DURATION);
    }
}

function stopCycling() {
    if (cycleInterval) {
        clearTimeout(cycleInterval);
        cycleInterval = null;
    }
    if (highScoreTimeout) {
        clearTimeout(highScoreTimeout);
        highScoreTimeout = null;
    }
}

function resumeCycling() {
    scannedTeamData = null;
    document.getElementById('countdownBar').style.width = '0%';
    document.getElementById('cycleIndicator').style.display = 'flex';
    
    if (teamScores.length > 0) {
        currentDisplayMode = 'team';
        displayCurrentTeam();
        startCycling();
    }
}

function showState(stateName) {
    document.querySelectorAll('.leaderboard-state').forEach(state => {
        state.classList.remove('active');
    });
    
    const stateElement = document.getElementById(stateName + 'State');
    if (stateElement) stateElement.classList.add('active');
    
    ensureRFIDFocus();
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}
</script>
