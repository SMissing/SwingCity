            </div>

            <div class="step" data-step="3">
                <h3 style="text-align: center; margin-bottom: 0.5rem;">Enter Player Names</h3>
                <p style="text-align: center; color: var(--text-secondary); font-size: 0.9rem;">Name each player</p>
                <div class="player-inputs" id="playerInputs"></div>
                <div class="btn-row">
                    <button class="btn btn-secondary" onclick="goToStep(2)"><iconify-icon icon="ph:arrow-left-bold"></iconify-icon> Back</button>
                    <button class="btn btn-primary" id="createTeamBtn" onclick="createTeam()"><iconify-icon icon="ph:check-circle-bold"></iconify-icon> Create Team</button>
            </div>
                </div>
                
            <div class="step" data-step="success">
                <div class="success-state">
                    <iconify-icon icon="ph:check-circle-bold"></iconify-icon>
                    <h3>Team Created!</h3>
                    <p>The team is ready to play</p>
                    <div class="team-info"><div class="label">RFID Card</div><div class="value" id="successRfid">-</div></div>
                    <div class="team-info"><div class="label">Players</div><div class="value" id="successPlayers">-</div></div>
                    <div class="btn-row">
                        <button class="btn btn-primary" onclick="resetAndCreateAnother()" style="flex: 1;"><iconify-icon icon="ph:plus-bold"></iconify-icon> Create Another</button>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- View Teams Modal with Side Panel -->
    <div class="modal-overlay teams-modal" id="teamsModal">
        <div class="modal-wrapper">
            <div class="modal">
                <div class="modal-header">
                    <h2><iconify-icon icon="ph:list-bullets-bold"></iconify-icon> Existing Teams</h2>
                    <button class="close-btn" onclick="closeTeamsModal()">
                        <iconify-icon icon="ph:x-bold"></iconify-icon>
                    </button>
            </div>
                <div class="teams-list" id="teamsList">
                    <div style="text-align: center; padding: 2rem;">
                        <div class="spinner" style="margin: 0 auto;"></div>
                        <p style="margin-top: 1rem; color: var(--text-secondary);">Loading teams...</p>
            </div>
            </div>
        </div>
            <div class="side-panel" id="sidePanel">
                <div class="side-panel-title">Players</div>
                <div id="sidePanelContent"></div>
                <div class="side-panel-hint">
                    <iconify-icon icon="ph:cursor-click-bold"></iconify-icon> Click team to edit scores
    </div>
</div>
            </div>
            </div>

    <!-- Edit Team Modal - Tabbed Interface -->
    <div class="modal-overlay edit-modal" id="editModal">
        <div class="modal">
            <div class="modal-header">
                <h2><iconify-icon icon="ph:pencil-simple-bold" style="color: var(--accent-orange);"></iconify-icon> Edit Scores</h2>
                <button class="close-btn" onclick="closeEditModal()">
                    <iconify-icon icon="ph:x-bold"></iconify-icon>
                </button>
            </div>
            
            <div class="player-tabs" id="playerTabs"></div>
            
            <div class="tab-content" id="tabContent"></div>
            
            <div class="edit-modal-footer">
                <button class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
                <button class="btn btn-primary" id="saveEditBtn" onclick="saveTeamEdit()">
                    <iconify-icon icon="ph:floppy-disk-bold"></iconify-icon> Save Changes
                </button>
        </div>
    </div>
</div>

    <!-- Toast -->
    <div class="toast" id="toast">
        <iconify-icon icon="ph:check-circle-bold"></iconify-icon>
        <span id="toastMessage">Success!</span>
            </div>

    <script>
        // Constants
        const HOLES = ['Plinko', 'SpinningTop', 'Haphazard', 'Roundhouse', 'HillHop', 'SkiJump', 'Mastermind', 'Igloo', 'Octagon', 'LoopDeLoop', 'UpAndOver', 'Lopside'];
        
        // State
        let currentStep = 1;
        let teamData = { rfid: '', playerCount: 0, playerNames: [] };
        let editingTeam = null;
        let teamsCache = [];
        let hoveredTeamRfid = null;
        let activePlayerTab = 0;

        // Test names for quick team creation
        const TEST_FIRST_NAMES = ['Alex', 'Jordan', 'Taylor', 'Morgan', 'Casey', 'Riley', 'Quinn', 'Avery', 'Parker', 'Sage', 'River', 'Skyler', 'Jamie', 'Drew', 'Blake', 'Reese', 'Charlie', 'Finley', 'Hayden', 'Rowan'];
        const TEST_LAST_NAMES = ['Smith', 'Johnson', 'Williams', 'Brown', 'Jones', 'Garcia', 'Miller', 'Davis', 'Wilson', 'Moore', 'Taylor', 'Anderson', 'Thomas', 'Jackson', 'White', 'Harris', 'Martin', 'Thompson', 'Young', 'King'];

        // Utilities
        function generateUniqueEmail(playerName, index) {
            const timestamp = Date.now();
            const randomStr = Math.random().toString(36).substring(2, 8);
            const nameSlug = playerName.toLowerCase().replace(/[^a-z0-9]/g, '').substring(0, 10) || 'player';
            return `${nameSlug}_${timestamp}_${randomStr}@swingcity.local`;
        }

        function getRandomName() {
            const first = TEST_FIRST_NAMES[Math.floor(Math.random() * TEST_FIRST_NAMES.length)];
            const last = TEST_LAST_NAMES[Math.floor(Math.random() * TEST_LAST_NAMES.length)];
            return `${first} ${last}`;
        }

        // Create test team with 6 random players
        async function createTestTeam() {
            // Generate 6 random player names
            const testNames = [];
            for (let i = 0; i < 6; i++) {
                testNames.push(getRandomName());
            }

            // Build players array
            const players = testNames.map((name, index) => ({
                name: name,
                email: generateUniqueEmail(name, index)
            }));

            // Show loading state
            const createBtn = document.querySelector('.test-team-link');
            const originalContent = createBtn.innerHTML;
            createBtn.innerHTML = '<div class="spinner" style="width: 16px; height: 16px;"></div> Creating test team...';
            createBtn.style.pointerEvents = 'none';

            try {
                const response = await fetch('/api/teams', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        rfid: teamData.rfid,
                        teamName: testNames[0], // Use first player's name as team name
                        players: players
                    })
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById('successRfid').textContent = teamData.rfid;
                    document.getElementById('successPlayers').textContent = testNames.join(', ');
                    currentStep = 'success';
                    updateStepDisplay();
                    showToast('Test team created with 6 players!', 'success');
                } else {
                    throw new Error(data.message || 'Failed to create team');
                }
            } catch (error) {
                console.error('Error creating test team:', error);
                showToast(error.message || 'Failed to create test team', 'error');
                createBtn.innerHTML = originalContent;
                createBtn.style.pointerEvents = '';
            }
        }

        function formatDate(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            const now = new Date();
            const diff = now - date;
            
            if (diff < 86400000) {
                const hours = Math.floor(diff / 3600000);
                if (hours < 1) {
                    const mins = Math.floor(diff / 60000);
                    return mins < 1 ? 'Just now' : `${mins}m ago`;
                }
                return `${hours}h ago`;
            }
            
            return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' });
        }

        function getTeamDisplayName(team) {
            if (team.players && team.players.length > 0) return team.players[0].name || 'Unknown';
            return team.teamName || 'Unknown';
        }

        function calculatePlayerTotal(player) {
            if (!player.scores) return 0;
            let total = 0;
            for (const hole in player.scores) {
                if (player.scores[hole] && typeof player.scores[hole].total === 'number') {
                    total += player.scores[hole].total;
                }
            }
            return total;
        }

        function getHoleScore(player, holeName) {
            if (!player.scores || !player.scores[holeName]) return 0;
            return player.scores[holeName].total || 0;
        }

        function getHoleCompleted(holeName) {
            if (!editingTeam || !editingTeam.holesCompleted) return false;
            return editingTeam.holesCompleted[holeName] === true;
        }

        function toggleHoleCompleted(holeName, isCompleted, playerIndex) {
            if (!editingTeam) return;
            
            if (!editingTeam.holesCompleted) {
                editingTeam.holesCompleted = {};
            }
            
            editingTeam.holesCompleted[holeName] = isCompleted;
            
            // Update visual state for all player tabs (since holesCompleted is team-wide)
            editingTeam.players.forEach((player, idx) => {
                const holeItem = document.getElementById(`holeItem_${idx}_${holeName}`);
                if (holeItem) {
                    holeItem.classList.toggle('completed', isCompleted);
                    // Also update the checkbox in other tabs
                    const checkbox = holeItem.querySelector('input[type="checkbox"]');
                    if (checkbox) checkbox.checked = isCompleted;
                }
            });
        }

        // Modal Controls
        function openCreateModal() {
            document.getElementById('createModal').classList.add('active');
            resetModal();
            setTimeout(() => document.getElementById('rfidInput').focus(), 100);
        }

        function closeCreateModal() {
            document.getElementById('createModal').classList.remove('active');
            resetModal();
        }

        function openTeamsModal() {
            document.getElementById('teamsModal').classList.add('active');
            loadTeams();
        }

        function closeTeamsModal() {
            document.getElementById('teamsModal').classList.remove('active');
            document.getElementById('sidePanel').classList.remove('visible');
            hoveredTeamRfid = null;
        }

        function openEditModal(rfid) {
            const team = teamsCache.find(t => t.rfid === rfid);
            if (!team) {
                showToast('Team not found', 'error');
                return;
            }
            
            editingTeam = JSON.parse(JSON.stringify(team)); // Deep clone
            activePlayerTab = 0;
            renderEditTabs();
            document.getElementById('editModal').classList.add('active');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('active');
            editingTeam = null;
        }

        function resetModal() {
            currentStep = 1;
            teamData = { rfid: '', playerCount: 0, playerNames: [] };
            document.getElementById('rfidInput').value = '';
            document.querySelectorAll('.player-count-btn').forEach(btn => btn.classList.remove('selected'));
            document.getElementById('playerCountNext').disabled = true;
            updateStepDisplay();
        }

        function resetAndCreateAnother() {
            resetModal();
            setTimeout(() => document.getElementById('rfidInput').focus(), 100);
        }

        // Step Navigation
        function goToStep(step) {
            currentStep = step;
            updateStepDisplay();
            if (step === 3) {
                renderPlayerInputs();
                setTimeout(() => {
                    const firstInput = document.querySelector('.player-name-input');
                    if (firstInput) firstInput.focus();
                }, 100);
            }
        }

        function updateStepDisplay() {
            document.querySelectorAll('.step').forEach(s => s.classList.remove('active'));
            const activeStep = document.querySelector(`.step[data-step="${currentStep}"]`);
            if (activeStep) activeStep.classList.add('active');

            document.querySelectorAll('.step-dot').forEach((dot, index) => {
                dot.classList.remove('active', 'completed');
                if (index + 1 === currentStep) dot.classList.add('active');
                else if (index + 1 < currentStep) dot.classList.add('completed');
            });
        }

        // RFID Input
        document.getElementById('rfidInput').addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                const rfid = this.value.trim();
                if (rfid.length >= 4) {
                    teamData.rfid = rfid;
                    goToStep(2);
                } else {
                    showToast('Please scan a valid RFID card', 'error');
                }
            }
        });

        // Player Count Selection
        document.querySelectorAll('.player-count-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.player-count-btn').forEach(b => b.classList.remove('selected'));
                this.classList.add('selected');
                teamData.playerCount = parseInt(this.dataset.count);
                document.getElementById('playerCountNext').disabled = false;
            });
        });

        // Render Player Inputs
        function renderPlayerInputs() {
            const container = document.getElementById('playerInputs');
            container.innerHTML = '';

            for (let i = 1; i <= teamData.playerCount; i++) {
                const group = document.createElement('div');
                group.className = 'player-input-group';
                group.innerHTML = `
                    <div class="player-number">${i}</div>
                    <input type="text" class="player-name-input" placeholder="Player ${i} name" data-index="${i - 1}" autocomplete="off">
                `;
                container.appendChild(group);
            }

            container.querySelectorAll('.player-name-input').forEach((input, index, inputs) => {
                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        if (index < inputs.length - 1) inputs[index + 1].focus();
                        else createTeam();
                    }
                });
            });
        }

        // Render Edit Tabs
        function renderEditTabs() {
            const tabsContainer = document.getElementById('playerTabs');
            const contentContainer = document.getElementById('tabContent');
            
            if (!editingTeam || !editingTeam.players) return;

            // Render tabs
            tabsContainer.innerHTML = editingTeam.players.map((player, index) => `
                <button class="player-tab ${index === activePlayerTab ? 'active' : ''}" onclick="switchPlayerTab(${index})">
                    <span class="tab-number">${index + 1}</span>
                    ${player.name || 'Player ' + (index + 1)}
                </button>
            `).join('');

            // Render tab content
            contentContainer.innerHTML = editingTeam.players.map((player, index) => {
                const total = calculatePlayerTotal(player);
                const holesHtml = HOLES.map(hole => {
                    const score = getHoleScore(player, hole);
                    const isCompleted = getHoleCompleted(hole);
                    return `
                        <div class="hole-score-item ${isCompleted ? 'completed' : ''}" id="holeItem_${index}_${hole}">
                            <span class="hole-name">${hole}</span>
                            <input type="number" 
                                   value="${score}" 
                                   data-player="${index}" 
                                   data-hole="${hole}"
                                   onchange="updateHoleScore(${index}, '${hole}', this.value)"
                                   placeholder="0">
                            <label class="completed-toggle" title="Mark as completed">
                                <input type="checkbox" 
                                       ${isCompleted ? 'checked' : ''}
                                       onchange="toggleHoleCompleted('${hole}', this.checked, ${index})">
                                <span class="slider"></span>
                            </label>
                </div>
                    `;
                }).join('');

                return `
                    <div class="tab-pane ${index === activePlayerTab ? 'active' : ''}" data-player="${index}">
                        <div class="player-name-edit">
                            <label>Player Name</label>
                            <input type="text" value="${player.name || ''}" onchange="updatePlayerName(${index}, this.value)">
            </div>
                        
                        <div class="holes-section-title">Hole Scores & Completion</div>
                        <div class="holes-header">
                            <span>Hole</span>
                            <span class="score-label">Score</span>
                            <span class="done-label">Done</span>
            </div>
                        <div class="holes-grid">${holesHtml}</div>
                        
                        <div class="player-total">
                            <span class="label">Total Score</span>
                            <span class="value" id="playerTotal${index}">${total} pts</span>
        </div>
    </div>
                `;
            }).join('');
        }

        function switchPlayerTab(index) {
            activePlayerTab = index;
            
            document.querySelectorAll('.player-tab').forEach((tab, i) => {
                tab.classList.toggle('active', i === index);
            });
            
            document.querySelectorAll('.tab-pane').forEach((pane, i) => {
                pane.classList.toggle('active', i === index);
            });
        }

        function updatePlayerName(playerIndex, newName) {
            if (editingTeam && editingTeam.players[playerIndex]) {
                editingTeam.players[playerIndex].name = newName;
                // Update tab label
                const tab = document.querySelectorAll('.player-tab')[playerIndex];
                if (tab) {
                    tab.innerHTML = `<span class="tab-number">${playerIndex + 1}</span>${newName || 'Player ' + (playerIndex + 1)}`;
                }
            }
        }

        function updateHoleScore(playerIndex, holeName, value) {
            if (!editingTeam || !editingTeam.players[playerIndex]) return;
            
            const player = editingTeam.players[playerIndex];
            if (!player.scores) player.scores = {};
            if (!player.scores[holeName]) player.scores[holeName] = { throws: [], total: 0 };
            
            player.scores[holeName].total = parseInt(value) || 0;
            
            // Update total display
            const total = calculatePlayerTotal(player);
            const totalEl = document.getElementById(`playerTotal${playerIndex}`);
            if (totalEl) totalEl.textContent = total + ' pts';
        }

        // Create Team
        async function createTeam() {
            const inputs = document.querySelectorAll('.player-name-input');
            const names = [];
            let hasEmpty = false;

            inputs.forEach(input => {
                const name = input.value.trim();
                if (!name) {
                    hasEmpty = true;
                    input.style.borderColor = 'var(--danger)';
                } else {
                    input.style.borderColor = '';
                    names.push(name);
                }
            });

            if (hasEmpty) {
                showToast('Please enter all player names', 'error');
                return;
            }

            teamData.playerNames = names;

            const createBtn = document.getElementById('createTeamBtn');
            const originalContent = createBtn.innerHTML;
            createBtn.innerHTML = '<div class="spinner" style="width: 20px; height: 20px;"></div> Creating...';
            createBtn.disabled = true;

            try {
                const players = teamData.playerNames.map((name, index) => ({
                    name: name,
                    email: generateUniqueEmail(name, index)
                }));

                const response = await fetch('/api/teams', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        rfid: teamData.rfid,
                        teamName: teamData.playerNames[0] || 'Team',
                        players: players
                    })
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById('successRfid').textContent = teamData.rfid;
                    document.getElementById('successPlayers').textContent = teamData.playerNames.join(', ');
                    currentStep = 'success';
                    updateStepDisplay();
                    showToast('Team created successfully!', 'success');
                } else {
                    throw new Error(data.message || 'Failed to create team');
                }
            } catch (error) {
                console.error('Error creating team:', error);
                showToast(error.message || 'Failed to create team', 'error');
                createBtn.innerHTML = originalContent;
                createBtn.disabled = false;
            }
        }

        // Load Teams
        async function loadTeams() {
            const container = document.getElementById('teamsList');
            container.innerHTML = `
                <div style="text-align: center; padding: 2rem;">
                    <div class="spinner" style="margin: 0 auto;"></div>
                    <p style="margin-top: 1rem; color: var(--text-secondary);">Loading teams...</p>
</div>
            `;

            try {
                const response = await fetch('/api/teams');
                const data = await response.json();

                if (data.teams && data.teams.length > 0) {
                    const fullTeams = await Promise.all(
                        data.teams.map(async (team) => {
                            try {
                                const teamResponse = await fetch(`/api/team/${team.rfid}`);
                                const teamData = await teamResponse.json();
                                return { ...team, ...teamData };
                            } catch (e) {
                                return team;
                            }
                        })
                    );

                    fullTeams.sort((a, b) => {
                        const dateA = new Date(a.created || a.lastUpdated || 0);
                        const dateB = new Date(b.created || b.lastUpdated || 0);
                        return dateB - dateA;
                    });

                    teamsCache = fullTeams;

                    container.innerHTML = fullTeams.map(team => {
                        const displayName = getTeamDisplayName(team);
                        const playerCount = team.players ? team.players.length : 0;
                        const createdDate = formatDate(team.created || team.lastUpdated);

                        return `
                            <div class="team-item" 
                                 data-rfid="${team.rfid}"
                                 onclick="openEditModal('${team.rfid}')"
                                 onmouseenter="showSidePanel('${team.rfid}')"
                                 onmouseleave="hideSidePanel()">
                                <div class="team-item-info">
                                    <div class="team-name-row">
                                        <h4>${displayName}</h4>
                                        <span class="created-date">${createdDate}</span>
            </div>
                                    <p class="team-meta">${playerCount} player${playerCount !== 1 ? 's' : ''}  ${team.rfid.slice(-8)}</p>
                </div>
                                <div class="team-item-actions">
                                    <button onclick="event.stopPropagation(); deleteTeam('${team.rfid}')" class="delete" title="Delete Team">
                                        <iconify-icon icon="ph:trash-bold"></iconify-icon>
                                    </button>
            </div>
            </div>
                        `;
                    }).join('');
                } else {
                    teamsCache = [];
                    container.innerHTML = `
                        <div class="no-teams">
                            <iconify-icon icon="ph:users-three-bold"></iconify-icon>
                            <p>No teams created yet</p>
        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading teams:', error);
                container.innerHTML = `
                    <div class="no-teams">
                        <iconify-icon icon="ph:warning-bold" style="color: var(--danger);"></iconify-icon>
                        <p>Failed to load teams</p>
    </div>
                `;
            }
        }

        // Side Panel
        function showSidePanel(rfid) {
            const team = teamsCache.find(t => t.rfid === rfid);
            if (!team) return;

            hoveredTeamRfid = rfid;
            const panel = document.getElementById('sidePanel');
            const content = document.getElementById('sidePanelContent');

            if (team.players && team.players.length > 0) {
                content.innerHTML = team.players.map(player => {
                    const total = calculatePlayerTotal(player);
                    return `
                        <div class="side-panel-player">
                            <span class="name">${player.name || 'Unknown'}</span>
                            <span class="score">${total} pts</span>
</div>
                    `;
                }).join('');
            } else {
                content.innerHTML = '<div style="color: var(--text-muted); font-size: 0.9rem;">No players</div>';
            }

            panel.classList.add('visible');

            // Highlight the hovered team
            document.querySelectorAll('.team-item').forEach(item => {
                item.classList.toggle('selected', item.dataset.rfid === rfid);
            });
        }

        function hideSidePanel() {
            hoveredTeamRfid = null;
            document.getElementById('sidePanel').classList.remove('visible');
            document.querySelectorAll('.team-item').forEach(item => {
                item.classList.remove('selected');
            });
        }

        // Save Team Edit
        async function saveTeamEdit() {
            if (!editingTeam) return;

            const saveBtn = document.getElementById('saveEditBtn');
            const originalContent = saveBtn.innerHTML;
            saveBtn.innerHTML = '<div class="spinner" style="width: 20px; height: 20px;"></div> Saving...';
            saveBtn.disabled = true;

            try {
                const players = editingTeam.players.map(player => ({
                    id: player.id,
                    name: player.name,
                    scores: player.scores || {}
                }));

                const response = await fetch(`/api/teams/${editingTeam.rfid}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        teamName: players[0]?.name || editingTeam.teamName,
                        players: players,
                        holesCompleted: editingTeam.holesCompleted || {}
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showToast('Team updated successfully!', 'success');
                    closeEditModal();
                    loadTeams();
                } else {
                    throw new Error(data.message || 'Failed to update team');
                }
            } catch (error) {
                console.error('Error updating team:', error);
                showToast(error.message || 'Failed to update team', 'error');
            } finally {
                saveBtn.innerHTML = originalContent;
                saveBtn.disabled = false;
            }
        }

        // Delete Team
        async function deleteTeam(rfid) {
            if (!confirm('Are you sure you want to delete this team?')) return;

            try {
                const response = await fetch(`/api/teams/${rfid}`, { method: 'DELETE' });
                const data = await response.json();

                if (data.success) {
                    showToast('Team deleted', 'success');
                    loadTeams();
                } else {
                    throw new Error(data.message || 'Failed to delete team');
                }
            } catch (error) {
                console.error('Error deleting team:', error);
                showToast('Failed to delete team', 'error');
            }
        }

        // Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const icon = toast.querySelector('iconify-icon');
            const text = document.getElementById('toastMessage');

            toast.className = 'toast ' + type;
            icon.setAttribute('icon', type === 'success' ? 'ph:check-circle-bold' : 'ph:x-circle-bold');
            text.textContent = message;

            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // Close modals on overlay click
        document.querySelectorAll('.modal-overlay').forEach(overlay => {
            overlay.addEventListener('click', function(e) {
                if (e.target === this || e.target.classList.contains('modal-wrapper')) {
                    this.classList.remove('active');
                    if (this.id === 'createModal') resetModal();
                    if (this.id === 'editModal') editingTeam = null;
                    if (this.id === 'teamsModal') {
                        document.getElementById('sidePanel').classList.remove('visible');
                        hoveredTeamRfid = null;
                    }
                }
            });
        });

        // Close on Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.querySelectorAll('.modal-overlay.active').forEach(modal => {
                    modal.classList.remove('active');
                    if (modal.id === 'createModal') resetModal();
                    if (modal.id === 'editModal') editingTeam = null;
                });
            }
        });
    </script>
    </div><!-- end pageContent -->
    <script src="/js/pin-lock.js"></script>
</body>
