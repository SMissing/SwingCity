<body>
    <%- include('partials/pin-lock') %>

    <div id="pageContent" style="display: none;">
    <div class="bg-pattern"></div>

    <div class="container">
        <header class="header">
            <a href="/" class="back-btn">
                <iconify-icon icon="ph:arrow-left-bold"></iconify-icon>
            </a>
            <div class="header-content">
                <h1>Team Creator</h1>
                <p>Set up teams for the golf experience</p>
        </div>
        </header>

        <main class="main-content">
            <button class="create-team-btn" onclick="openCreateModal()">
                <iconify-icon icon="ph:plus-circle-bold"></iconify-icon>
