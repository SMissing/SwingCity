<script>
let allHighScores = [];
let filteredHighScores = [];
let socket = null;
let currentPeriod = 'all';

const REFRESH_INTERVAL = 30000;

const PERIOD_CONFIG = {
    all: { title: 'High Scores', subtitle: 'All-Time Leaders', label: 'Total Players:', empty: 'No scores yet' },
    monthly: { title: 'Monthly Scores', subtitle: 'This Month\'s Leaders', label: 'This Month:', empty: 'No scores this month' },
    weekly: { title: 'Weekly Scores', subtitle: 'This Week\'s Leaders', label: 'This Week:', empty: 'No scores this week' },
    daily: { title: "Today's Scores", subtitle: "Today's Leaders", label: 'Today:', empty: 'No scores today' }
};

document.addEventListener('DOMContentLoaded', function() {
    initializeSocket();
    loadHighScores();
    setupFullscreenToggle();
    setInterval(loadHighScores, REFRESH_INTERVAL);
});

function initializeSocket() {
    socket = io();
    socket.on('highScoreUpdated', () => loadHighScores());
}

function setTimePeriod(period) {
    currentPeriod = period;
    
    document.querySelectorAll('.time-tab').forEach(tab => {
        tab.classList.toggle('active', tab.dataset.period === period);
    });
    
    const config = PERIOD_CONFIG[period];
    document.getElementById('pageTitle').textContent = config.title;
    document.getElementById('pageSubtitle').textContent = config.subtitle;
    document.getElementById('playerLabel').textContent = config.label;
    
    filterScoresByPeriod();
    renderScores();
    updateFooter();
}

function filterScoresByPeriod() {
    const now = new Date();

    // Use trailing windows instead of calendar boundaries
    switch (currentPeriod) {
        case 'daily':
            const last24Hours = new Date(now.getTime() - 24 * 60 * 60 * 1000);
            filteredHighScores = allHighScores.filter(s => new Date(s.lastUpdated) >= last24Hours);
            break;
        case 'weekly':
            const last168Hours = new Date(now.getTime() - 168 * 60 * 60 * 1000);
            filteredHighScores = allHighScores.filter(s => new Date(s.lastUpdated) >= last168Hours);
            break;
        case 'monthly':
            const last31Days = new Date(now.getTime() - 31 * 24 * 60 * 60 * 1000);
            filteredHighScores = allHighScores.filter(s => new Date(s.lastUpdated) >= last31Days);
            break;
        default:
            filteredHighScores = [...allHighScores];
    }
    
    filteredHighScores.sort((a, b) => b.totalScore - a.totalScore);
}

async function loadHighScores() {
    try {
        const response = await fetch('/api/highscores?limit=500');
        if (!response.ok) throw new Error('Failed to fetch');
        
        const data = await response.json();
        allHighScores = data.highScores || [];
        
        filterScoresByPeriod();
        renderScores();
        updateFooter();
        showContent();
    } catch (error) {
        console.error('Error loading high scores:', error);
    }
}

function renderScores() {
    const podiumContainer = document.getElementById('podiumContainer');
    const scoresList = document.getElementById('scoresList');
    const config = PERIOD_CONFIG[currentPeriod];
    
    podiumContainer.innerHTML = '';
    scoresList.innerHTML = '';
    
    if (filteredHighScores.length === 0) {
        podiumContainer.innerHTML = `<div class="empty-state"><p>${config.empty}</p></div>`;
        return;
    }
    
    // Render top 3 in podium
    const top3 = filteredHighScores.slice(0, 3);
    const rankStyles = ['gold', 'silver', 'bronze'];
    
    top3.forEach((score, i) => {
        const entry = document.createElement('div');
        entry.className = `podium-entry${i === 0 ? ' first' : ''}`;
        entry.innerHTML = `
            <div class="podium-rank ${rankStyles[i]}">${i + 1}</div>
            <div class="podium-info">
                <div class="podium-name">${escapeHtml(score.playerName)}</div>
                <div class="podium-score"><span>${score.totalScore.toLocaleString()}</span> points</div>
            </div>
        `;
        podiumContainer.appendChild(entry);
    });
    
    // Render remaining scores (4+)
    const remaining = filteredHighScores.slice(3);
    document.getElementById('showingCount').textContent = filteredHighScores.length;
    
    remaining.forEach((score, i) => {
        const row = document.createElement('div');
        row.className = 'score-row';
        row.innerHTML = `
            <div class="score-rank">${i + 4}</div>
            <div class="score-name">${escapeHtml(score.playerName)}</div>
            <div class="score-points">${score.totalScore.toLocaleString()}</div>
        `;
        scoresList.appendChild(row);
    });
}

function updateFooter() {
    document.getElementById('totalPlayers').textContent = filteredHighScores.length;
    document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
}

function showContent() {
    document.getElementById('loadingState').style.display = 'none';
    document.getElementById('podiumSection').style.display = 'flex';
    document.getElementById('scoresSection').style.display = 'flex';
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

function setupFullscreenToggle() {
    let clicks = 0, timer = null, singleTimer = null;
    document.getElementById('logo').addEventListener('click', () => {
        clicks++;
        clearTimeout(timer);
        clearTimeout(singleTimer);
        timer = setTimeout(() => clicks = 0, 2000);
        
        if (clicks === 4) {
            // 4x click = fullscreen toggle
            const isFs = document.fullscreenElement;
            if (!isFs) document.documentElement.requestFullscreen?.();
            else document.exitFullscreen?.();
            clicks = 0;
        } else if (clicks === 1) {
            // Single click = go home (with delay to check for multi-click)
            singleTimer = setTimeout(() => {
                if (clicks === 1) {
                    window.location.href = '/';
                }
            }, 300);
        }
    });
}
