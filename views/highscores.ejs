        /* Corner accents */
        .corner-accent {
            position: fixed;
            width: 60px;
            height: 60px;
            border: 1px solid var(--gold-primary);
            opacity: 0.12;
            pointer-events: none;
            z-index: 1;
        }
        .corner-accent.tl { top: 1rem; left: 1rem; border-right: none; border-bottom: none; }
        .corner-accent.tr { top: 1rem; right: 1rem; border-left: none; border-bottom: none; }
        .corner-accent.bl { bottom: 1rem; left: 1rem; border-right: none; border-top: none; }
        .corner-accent.br { bottom: 1rem; right: 1rem; border-left: none; border-top: none; }

        /* Main Container */
        .page-container {
            position: relative;
            z-index: 2;
            height: 100vh;
            display: flex;
            flex-direction: column;
            padding: 2.5rem 5rem;
        }

        /* Header */
        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            flex-shrink: 0;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .page-logo {
            height: 70px;
            width: auto;
            cursor: pointer;
            transition: opacity 0.3s ease;
        }

        .page-logo:hover {
            opacity: 0.8;
        }

        .page-title-section h1 {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2.5rem;
            font-weight: 400;
            color: var(--gold-light);
            letter-spacing: 0.08em;
        }

        .page-title-section p {
            font-size: 0.8rem;
            color: var(--text-muted);
            letter-spacing: 0.1em;
            text-transform: uppercase;
            margin-top: 0.15rem;
        }

        /* Time Period Tabs */
        .time-tabs {
            display: flex;
            gap: 0.5rem;
        }

        .time-tab {
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
            font-weight: 500;
            color: var(--text-muted);
            background: transparent;
            border: 1px solid transparent;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s ease;
            font-family: 'Space Grotesk', sans-serif;
            letter-spacing: 0.03em;
        }

        .time-tab:hover {
            color: var(--gold-light);
            border-color: var(--border-gold);
        }

        .time-tab.active {
            color: var(--bg-dark);
            background: var(--gold-primary);
            border-color: var(--gold-primary);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            display: flex;
            gap: 3rem;
            min-height: 0;
            overflow: hidden;
        }

        /* Podium Section - Left Side */
        .podium-section {
            width: 320px;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 1rem 0;
        }

        .podium-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.3rem;
            color: var(--gold-primary);
            letter-spacing: 0.15em;
            text-transform: uppercase;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .podium-container {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .podium-entry {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem 1.5rem;
            background: rgba(28, 25, 23, 0.6);
            border: 1px solid var(--border-gold);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .podium-entry:hover {
            background: rgba(28, 25, 23, 0.8);
            border-color: rgba(212, 168, 84, 0.4);
        }

        .podium-entry.first {
            background: linear-gradient(135deg, rgba(212, 168, 84, 0.15) 0%, rgba(28, 25, 23, 0.8) 100%);
            border-color: rgba(212, 168, 84, 0.4);
        }

        .podium-rank {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.4rem;
            font-weight: 400;
            border-radius: 50%;
            flex-shrink: 0;
        }

        .podium-rank.gold {
            background: linear-gradient(135deg, var(--gold-primary) 0%, var(--gold-dark) 100%);
            color: var(--bg-dark);
        }

        .podium-rank.silver {
            background: linear-gradient(135deg, #e8e8e8 0%, #a0a0a0 100%);
            color: var(--bg-dark);
        }

        .podium-rank.bronze {
            background: linear-gradient(135deg, #cd9b6a 0%, #8b6040 100%);
            color: var(--bg-dark);
        }

        .podium-info {
            flex: 1;
            min-width: 0;
        }

        .podium-name {
            font-size: 1.15rem;
            font-weight: 600;
            color: var(--text-primary);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .podium-entry.first .podium-name {
            color: var(--gold-light);
        }

        .podium-score {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 0.2rem;
        }

        .podium-score span {
            color: var(--gold-primary);
            font-weight: 600;
        }

        /* Scores List Section - Right Side */
        .scores-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
            overflow: hidden;
        }

        .scores-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-gold);
            margin-bottom: 0;
            flex-shrink: 0;
        }

        .scores-header h2 {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.3rem;
            color: var(--gold-primary);
            letter-spacing: 0.1em;
            text-transform: uppercase;
        }

        .scores-count {
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        .scores-count span {
            color: var(--gold-primary);
        }

        .scores-list {
            flex: 1;
            overflow-y: auto;
            padding-right: 0.5rem;
        }

        .scores-list::-webkit-scrollbar {
            width: 4px;
        }

        .scores-list::-webkit-scrollbar-track {
            background: transparent;
        }

        .scores-list::-webkit-scrollbar-thumb {
            background: var(--gold-dark);
            border-radius: 2px;
        }

        .score-row {
            display: flex;
            align-items: center;
            padding: 0.85rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            transition: background 0.2s ease;
        }

        .score-row:hover {
            background: rgba(212, 168, 84, 0.03);
        }

        .score-rank {
            width: 50px;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-muted);
            flex-shrink: 0;
        }

        .score-name {
            flex: 1;
            font-size: 1rem;
            color: var(--text-primary);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            padding-right: 1rem;
        }

        .score-points {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gold-primary);
            font-variant-numeric: tabular-nums;
        }

        /* Loading State */
        .loading-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 2px solid var(--border-gold);
            border-top-color: var(--gold-primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 1rem;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .loading-text {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Empty State */
        .empty-state {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--text-muted);
        }

        .empty-state p {
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        /* Footer */
        .page-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: 1.5rem;
            margin-top: 1rem;
            border-top: 1px solid var(--border-gold);
            font-size: 0.75rem;
            color: var(--text-muted);
            flex-shrink: 0;
        }

        .footer-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .live-dot {
            width: 6px;
            height: 6px;
            background: #22c55e;
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.4; }
        }

        .footer-value {
            color: var(--gold-primary);
        }

        /* Responsive */
        @media (max-width: 1000px) {
            .page-container {
                padding: 1.5rem 2rem;
            }
            .main-content {
                flex-direction: column;
                gap: 1.5rem;
            }
            .podium-section {
                width: 100%;
                padding: 0;
            }
            .podium-container {
                flex-direction: row;
                gap: 0.75rem;
            }
            .podium-entry {
                flex: 1;
                flex-direction: column;
                text-align: center;
                padding: 1rem;
            }
            .podium-info {
                width: 100%;
            }
            .corner-accent {
                display: none;
            }
        }

        @media (max-width: 600px) {
            .page-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            .time-tabs {
                width: 100%;
                justify-content: space-between;
            }
            .time-tab {
                flex: 1;
                text-align: center;
                padding: 0.4rem 0.5rem;
                font-size: 0.75rem;
            }
            .podium-container {
                flex-direction: column;
            }
            .podium-entry {
                flex-direction: row;
            }
            .page-footer {
                flex-direction: column;
                gap: 0.75rem;
                align-items: flex-start;
            }
        }
    </style>
</head>
