            </nav>

            <div class="status-bar">
                <div class="status-item">
                    <span class="status-dot" id="serverStatus"></span>
                    <span id="serverStatusText">Checking server...</span>
                </div>
                <div class="status-item">
                    <span class="status-dot" id="firebaseStatus"></span>
                    <span id="firebaseStatusText">Checking database...</span>
                </div>
            </div>

            <footer class="footer">
                <div style="display: flex; align-items: center; justify-content: center; gap: 1rem; flex-wrap: wrap;">
                    <a href="/settings" class="settings-link">
                        <iconify-icon icon="ph:gear-bold"></iconify-icon>
                        Settings
                    </a>
                    <button class="update-logs-btn" id="updateLogsBtn" onclick="showUpdateLogsModal()">
                        <iconify-icon icon="ph:scroll-bold"></iconify-icon>
                        Update Logs
                    </button>
