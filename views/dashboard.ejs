    </div>

    <!-- Update Logs Modal -->
    <div class="update-modal-overlay" id="updateLogsModal">
        <div class="update-modal">
            <div class="update-modal-header">
                <div class="update-modal-title">
                    <iconify-icon icon="ph:scroll-bold"></iconify-icon>
                    Update Logs
                </div>
                <button class="update-modal-close" onclick="closeUpdateLogsModal()">
                    <iconify-icon icon="ph:x-bold"></iconify-icon>
                </button>
            </div>
            <div class="update-modal-content" id="updateLogsContent">
                <div style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                    Loading update logs...
                </div>
            </div>
            <div class="update-modal-footer">
                <button class="update-modal-btn" onclick="closeUpdateLogsModal()">Close</button>
            </div>
        </div>
    </div>

    <script src="/js/pin-lock.js"></script>
    <script>
        // ==================== HEALTH CHECK ====================
        async function checkHealth() {
            const serverDot = document.getElementById('serverStatus');
            const serverText = document.getElementById('serverStatusText');
            const firebaseDot = document.getElementById('firebaseStatus');
            const firebaseText = document.getElementById('firebaseStatusText');

            try {
                const response = await fetch('/api/health');
                const data = await response.json();

                serverDot.classList.remove('offline');
                serverText.textContent = 'Server Online';

                if (data.firebase && data.firebase.connected) {
                    firebaseDot.classList.remove('offline');
                    firebaseText.textContent = 'Database Connected';
                } else {
                    firebaseDot.classList.add('offline');
                    firebaseText.textContent = 'Database Offline';
                }
            } catch (error) {
                serverDot.classList.add('offline');
                serverText.textContent = 'Server Offline';
                firebaseDot.classList.add('offline');
                firebaseText.textContent = 'Database Unknown';
            }
        }

        // Display user info
        function displayUserInfo() {
            const userStr = sessionStorage.getItem('swingcity_user');
            const userInfo = document.getElementById('userInfo');
            const userName = document.getElementById('userName');
            
            if (userStr) {
                try {
                    const user = JSON.parse(userStr);
                    if (user.name && userName) {
                        userName.textContent = user.name;
                        userInfo.style.display = 'flex';
                    }
                } catch (error) {
                    console.error('Error parsing user info:', error);
                }
            }
        }

        // Logout function
        function logout() {
            sessionStorage.removeItem('swingcity_authenticated');
            sessionStorage.removeItem('swingcity_user');
            window.location.href = '/';
        }

        // Filter navigation based on permissions
        function filterNavigation() {
            const userStr = sessionStorage.getItem('swingcity_user');
            if (!userStr) {
                // Default PIN user has full access, show all
                return;
            }
            
            try {
                const user = JSON.parse(userStr);
                const isManagement = user.management === true;
                
                // Management users see all pages
                if (isManagement) {
                    return;
                }
                
                // Non-management users: hide settings and download
                document.querySelectorAll('[data-page]').forEach(navCard => {
                    const pageName = navCard.getAttribute('data-page');
                    if (pageName === 'settings' || pageName === 'download') {
                        navCard.style.display = 'none';
                    }
                });
            } catch (error) {
                console.error('Error filtering navigation:', error);
            }
        }

        // ==================== UPDATE LOGS SYSTEM ====================

        // Load training progress badge
        async function loadTrainingBadge() {
            const badge = document.getElementById('trainingBadge');
            if (!badge) return;
            
            try {
                const userStr = sessionStorage.getItem('swingcity_user');
                if (!userStr) {
                    badge.style.display = 'none';
                    return;
                }
                
                let userPin;
                try {
                    const user = JSON.parse(userStr);
                    userPin = user?.pin || 'default';
                } catch {
                    userPin = 'default';
                }
                
                // Skip badge for default staff account
                if (userPin === 'default') {
                    badge.style.display = 'none';
                    return;
                }
                
                // Get total modules count and training progress
                let totalModules = 4; // Default: web-1, soft-1, hard-1, hard-2
                let completedCount = 0;
                
                // Try to get total modules from API
                try {
                    const modulesResponse = await fetch('/api/training/modules/count');
                    if (modulesResponse.ok) {
                        const modulesData = await modulesResponse.json();
                        if (modulesData.success && modulesData.totalModules) {
                            totalModules = modulesData.totalModules;
                        }
                    }
                } catch (err) {
                    console.warn('Failed to fetch module count, using default:', err);
                }
                
                // Get completed modules from API or localStorage
                let completedModules = [];
                try {
                    const progressResponse = await fetch(`/api/training/progress?pin=${userPin}`);
                    if (progressResponse.ok) {
                        const progressData = await progressResponse.json();
                        if (progressData.success && progressData.progress) {
                            const progress = progressData.progress;
                            // Get all completed module IDs (check for truthy values, not just === true)
                            completedModules = Object.keys(progress).filter(m => progress[m]);
                        }
                    }
                } catch (err) {
                    // Fallback to localStorage
                    const storageKey = `swingcity_training_completed_pin_${userPin}`;
                    try {
                        const stored = localStorage.getItem(storageKey);
                        if (stored) {
                            const completed = JSON.parse(stored);
                            completedModules = Object.keys(completed).filter(m => completed[m]);
                        }
                    } catch (e) {
                        console.warn('Failed to read from localStorage:', e);
                    }
                }
                
                completedCount = completedModules.length;
                
                // Get the actual list of all modules to ensure we're comparing correctly
                let allModuleIds = [];
                try {
                    const modulesResponse = await fetch('/api/training/modules/count');
                    if (modulesResponse.ok) {
                        const modulesData = await modulesResponse.json();
                        if (modulesData.success && modulesData.modules) {
                            allModuleIds = modulesData.modules;
                            totalModules = allModuleIds.length;
                        }
                    }
                } catch (err) {
                    // Use default modules if API fails
                    allModuleIds = ['web-1', 'soft-1', 'hard-1', 'hard-2'];
                    totalModules = allModuleIds.length;
                }
                
                // Count incomplete: modules that exist but aren't in completed list
                const incompleteModules = allModuleIds.filter(m => !completedModules.includes(m));
                const incompleteCount = incompleteModules.length;
                
                // Update badge - only show if there are incomplete modules
                // Hide badge when incompleteCount is 0 (all modules completed)
                if (incompleteCount > 0) {
                    const countText = incompleteCount > 99 ? '99+' : incompleteCount.toString();
                    badge.textContent = `${countText} not started`;
                    badge.style.display = 'flex';
                } else {
                    // All modules completed - hide badge
                    badge.style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading training badge:', error);
                badge.style.display = 'none';
            }
        }

        // Show update logs modal
        async function showUpdateLogsModal() {
            const modal = document.getElementById('updateLogsModal');
            const content = document.getElementById('updateLogsContent');
            
            modal.classList.add('active');
            
            try {
                const response = await fetch('/api/update-logs');
                const data = await response.json();
                
                if (data.success && data.logs && data.logs.length > 0) {
                    let html = '';
                    data.logs.forEach(log => {
                        const date = new Date(log.timestamp);
                        const formattedDate = date.toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        });
                        
                        html += `
                            <div class="update-log-entry">
                                <div class="update-log-header">
                                    <div>
                                        <div class="update-log-version">Version ${log.version}</div>
                                        <div class="update-log-title">${log.title}</div>
                                    </div>
                                    <div class="update-log-date">${formattedDate}</div>
                                </div>
                                <div class="update-log-content">${log.content || log.fullContent}</div>
                            </div>
                        `;
                    });
                    
                    content.innerHTML = html;
                } else {
                    content.innerHTML = '<div style="text-align: center; padding: 2rem; color: var(--text-secondary);">No update logs available.</div>';
                }
            } catch (error) {
                console.error('Error loading update logs:', error);
                content.innerHTML = '<div style="text-align: center; padding: 2rem; color: var(--text-secondary);">Error loading update logs.</div>';
            }
        }

        // Close update logs modal
        function closeUpdateLogsModal() {
            document.getElementById('updateLogsModal').classList.remove('active');
        }


        // Close modals on overlay click
        document.getElementById('updateLogsModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeUpdateLogsModal();
            }
        });

        // Start health check when PIN is unlocked
        window.addEventListener('pinUnlocked', function() {
            checkHealth();
            filterNavigation();
            displayUserInfo();
            loadTrainingBadge();
        });

        // Also check if already authenticated on page load
        if (sessionStorage.getItem('swingcity_authenticated') === 'true') {
            checkHealth();
            filterNavigation();
            displayUserInfo();
            loadTrainingBadge();
        }

        // Recheck every 30 seconds (only when authenticated)
        setInterval(() => {
            if (sessionStorage.getItem('swingcity_authenticated') === 'true') {
                checkHealth();
                loadTrainingBadge();
            }
        }, 30000);
    </script>
