{
  "name": "swingcity-v2-launcher",
  "version": "1.0.0",
  "description": "SwingCity V2 Desktop Launcher",
  "main": "launcher/main-embedded.js",
  "scripts": {
    "launcher": "electron launcher/main-embedded.js",
    "build": "electron-builder"
  },
  "author": "Sam Missing",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.swingcity.launcher",
    "productName": "SwingCity V2 Launcher",
    "directories": {
      "output": "dist-launcher"
    },
    "files": [
      "launcher/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server.js",
        "to": "server.js"
      },
      {
        "from": "config",
        "to": "config"
      },
      {
        "from": "services",
        "to": "services"
      },
      {
        "from": "views",
        "to": "views"
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": ".env",
        "to": ".env",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "!node_modules/@serialport/**",
          "!node_modules/electron/**",
          "!node_modules/electron-builder/**"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
